<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partial/head %>
    </head>
    <body>
        <% include ../partial/header %>

        <div class="container w-full lg:w-2/3 mx-auto my-5">
        <% if(show == "true"){ %> <% include ../partial/toast %> <% } %> 
            <h1 class="text-center text-4xl mx-auto my-5">신규 블랙리스트</h1>

            <div class="mx-auto">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 55%;">제목</th>
                            <th scope="col" style="width: 25%;">사기꾼</th>
                            <th scope="col" style="width: 20%;">제보자</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(cheats.docs.length == 0){ %>
                        <tr>
                            <td colspan="3" class="text-center">
                                <i class="fas fa-exclamation-triangle text-red-600"></i>
                                검색 결과가 없습니다
                            </td>
                        </tr>
                        <% } %> <% cheats.docs.forEach(cheat => { %>
                        <tr class="break-all">
                            <td style="width: 55%; cursor: pointer;" onclick="javascript: location.href='/cheat/detail?id=<%= cheat._id %>'"><strong>[<%= cheat.tag %>]</strong> <%= cheat.title %></td>
                            <td style="width: 25%;">
                                <%= cheat.subCharacter %>
                                <!--  -->
                                <% if(Boolean(cheat.mainCharacter)){ %>
                                <br class="my_mobile_appear" />
                                (<%= cheat.mainCharacter %>)
                                <!--  -->
                                <% } %>
                            </td>
                            <td style="width: 20%;"><a href="/users/userProfile?id=<%= cheat.writer.email %>"><%= cheat.writer.nickname %></a></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

                <!-- Action -->

                <% if(session.user){ %>

                <div class="w-full flex justify-end">
                    <button type="button" class="btn btn-outline-danger px-5" onclick="javascript: location.href='/cheat/newCheat'">피해등록</button>
                </div>

                <!-- Action End -->

                <% } %>

                <!-- Paginator -->

                <form class="mx-auto my-4">
                    <nav aria-label="Page navigation mx-auto my-5">
                        <ul class="pagination justify-content-center">
                            <li style="cursor: pointer;" class="page-item <%= cheats.page == 1 ? "disabled" : "" %>">
                                <a class="page-link" onclick="setUrl('<%= cheats.page -1 %>')">Prev</a>
                            </li>
                            <li class="page-item">
                                <input class="page-link text-center w-16" type="number" min="1" name="page" value="<%= cheats.page %>" >
                            </li>
                            <li style="cursor: pointer;" class="page-item <%= cheats.page == cheats.totalPages ? "disabled" : "" %>">
                                <a class="page-link" onclick="setUrl('<%= cheats.page + 1 %>')">Next</a>
                            </li>
                        </ul>
                    </nav>
                </form>

                <!-- Paginator End -->

                <!-- Search -->

                <div class="w-full lg:w-1/2 mx-auto mt-5 text-center">
                    <form action="/cheat/search" method="GET">
                        <div class="form-row">
                            <div class="form-group col-md-10">
                                <input type="text" class="js_searchInput3 form-control" name="search" placeholder="닉네임/농장/휴대폰/계좌번호" required />
                            </div>
                            <div class="form-group col-md-2">
                                <input type="submit" class="form-control btn btn-primary" value="검색" />
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Search End -->
            </div>
        </div>

        <% include ../partial/foot %>
        <!--  -->
        <% include ../partial/footer %>
    </body>
</html>
